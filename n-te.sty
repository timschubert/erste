% Internal variables for storing
\newcommand\@ntecount{}  % index
\newcommand\@nteterm{}   % term

% Add 1 to current pagenumber.
% IMPORTANT: Affects the current page,
% not just the following ones.
\newcommand{\naddpage}[0]{\stepcounter{page}}

% Handle the display of the author of the
% Article.
% 1 Author's name
\newcommand{\nauthor}[1]
{
  \begin{flushright}
  \bfseries\small#1
  \end{flushright}
}

% Handle the display of the author of the
% Article.
% 1 Author's name
% 2 Author's email address.
\newcommand{\nauthormail}[2]{
  \begin{flushright}
  {\bfseries\small#1}\\
  \texttt{\small#2}
  \end{flushright}
}

% Set the number of the n-te
% Adjusts the headings for the TOC and the page heads
% 1 the number of the n-te (just the number!)
% 2 the term of the n-te
\newcommand\nedition[2]{
	\renewcommand\@ntecount{#1}  % store number
	\renewcommand\@nteterm{#2}  % store term
	\markboth{Die \@ntecount{-ste}}{\@nteterm}  % set page heads
	\renewcommand\contentsname{\@ntecount{-ste} im "Uberblick}  % set toc heading
	
	\usepackage[
	pdftitle={Erstsemesterzeitung der Fachgruppe Informatik \@nteterm},
	pdfauthor={Fachgruppe Informatik}
	]{hyperref}
}

\newcommand{\nframe}[1]{
  \begin{figure}[hb]
    \fbox{\parbox{0.97\linewidth}{#1}}
  \end{figure}
}

% Meta-information that assist in the
% structure of the TOC
% Use it at the point in the text that
% the new section starts
\newcommand{\nmetatoc}[1]{
  \addtocontents{toc}{
    {\large\bfseries#1}
  }
}

% \npicture[width][relpicwidth]{pic}{caption}
\long\def\npicture@[#1][#2]#3#4{%
  \parbox{#1} {
    \includegraphics[width=#2\linewidth]{{#3}}\\
    \parbox{\linewidth}{\small #4}
  }
}

\newcommand{\npicture}{%
	\optparams{\npicture@}{[\textwidth][0.7]}%
}

